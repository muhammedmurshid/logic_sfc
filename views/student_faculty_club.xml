<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.actions.act_window" id="details_student_faculty_action">
        <field name="name">Student Faculty Club</field>
        <field name="res_model">student.faculty</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="SFC" id="menu_sfc"
              action="details_student_faculty_action"
              web_icon="logic_sfc/static/description/icon.png"
              sequence="6"/>
    <menuitem name="SFC" id="menu_sfc_1"
              action="details_student_faculty_action"
              parent="menu_sfc"
              sequence="1"/>

    <record id="student_faculty_club_tree_view" model="ir.ui.view">
        <field name="name">Student Faculty Club</field>
        <field name="model">student.faculty</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>

                <!-- <field name="topic"/>
                <field name="student_id"/> -->
                <field name="batch_id"/>
                <field name="coordinator"/>
                <field string="Status" name="state" decoration-success="state == 'paid'" decoration-info="state == 'confirm'" decoration-warning="state == 'payment_request'" decoration-danger="state == 'reject'" widget="badge" />
            </tree>

        </field>
    </record>

    <record id="student_faculty_club_form_view" model="ir.ui.view">
        <field name="name">Student Faculty Club</field>
        <field name="model">student.faculty</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Student Faculty Club">
                <header>
                    <button name="confirm_sfc" groups="faculty.coordinator_user,faculty.group_faculty_administrator" string="Confirm" help="Click here to confirm the record" type="object" class="oe_highlight" attrs="{'invisible':[('state','!=','draft')]}"/>
                    <button name="request_payment" string="Request Payment" help="Click here to pay the total amount" type="object" class="oe_highlight" attrs="{'invisible':[('state','not in',('confirm','reject') )]}"/>
                    <!-- <button name="reject_payment" groups="faculty.group_accounting_manager" string="Reject" help="Click here to pay the total amount" type="object" class="btn-danger" attrs="{'invisible':[('state','!=','confirm')]}"/> -->
                    <button name="reset_to_draft" string="Reset to Draft" help="Click here to reset the record to draft state" type="object" class="btn-warning" attrs="{'invisible':[('state','!=','confirm')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,payment_request,paid,reject"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" text="PAID" bg_color="bg-success" attrs="{'invisible':[('state','!=','paid')]}"/>
                    <widget name="web_ribbon" text="REJECTED" bg_color="bg-danger" attrs="{'invisible':[('state','!=','reject')]}"/>
                    <widget name="web_ribbon" text="PAYMENT REQUESTED" bg_color="bg-warning" attrs="{'invisible':[('state','!=','payment_request')]}"/>

                    <group>
                        <group>
                            <field name="topic" attrs="{'readonly':[('state','not in',(False,'draft'))]}"/>
                            <field name="batch_id" attrs="{'readonly':[('state','not in',(False,'draft'))]}" widget="many2one" context="{'custom_name_display': True}"/>
                            <field name="student_id" attrs="{'readonly':[('state','not in',(False,'draft'))]}" domain="[('batch_id','=',batch_id)]"/>
                            <field name="coordinator"/>
                            <label for="photo_show"/>
                            <div class="o_row">
                                <field name="photo_show"/>
                                <button name="show_hide_photo" type="object"  class="btn-success" >Show/Hide</button>                               
                                <!-- <button name="custom_method" string="Copy to Clipboard" type="button" class="o_form_button_edit btn btn-primary"/>                            </div> -->
                            </div>
                            <field name="photo" widget="image" attrs="{'invisible':[('photo_show','=',False)]}"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="session_type" attrs="{'readonly':[('state','not in',(False,'draft'))]}"/>
                            <field name="questions_no" attrs="{'invisible':[('session_type','!=','question')]}" />
                            <field name="lecture_topic" attrs="{'invisible':[('session_type','!=','lecture')]}" />
                            <!-- <field name="students_count" attrs="{'readonly':[('state','not in',(False,'draft'))]}"/> -->
                            <!-- <field name="start_datetime" attrs="{'readonly':[('state','not in',(False,'draft'))]}"/>
                            <field name="end_datetime" attrs="{'readonly':[('state','not in',(False,'draft'))]}"/> -->
                            <field name="hours"/>
                            <field name="payment_rate" widget="monetary" attrs="{'readonly':[('state','not in',(False,'draft'))]}"/>
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page string="Sessions">
                                <field name="sessions" context="{'default_lecture_topic':lecture_topic}">
                                    <tree editable="bottom">
                                        <field name="lecture_topic" attrs="{'column_invisible':[('parent.session_type', '!=', 'lecture')]}" />
                                        <field name="questions_no" attrs="{'column_invisible':[('parent.session_type', '!=', 'question')]}" />
                                        <field name="students_count"/>
                                        <field name="start_datetime"/>
                                        <field name="end_datetime"/>
                                        <field name="hours"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Banking Details">
                                <group>
                                    <group>
                                        <field name="account_name" help="Enter the account holder's name here(as in Passbook)"/>
                                        <field name="account_no"/>
                                        <field name="bank_name"/>
                                        <field name="ifsc_code"/>
                                        <field name="bank_branch"/>
                                        <field name="currency_id" invisible="1"/>
                                    </group>
                                    <group name="note_group" col="6" class="mt-2 mt-md-0">
                                        <group class="oe_subtotal_footer oe_right" colspan="2">
                                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                                <label for="amount_total"/>
                                            </div>
                                            <field name="amount_total" attrs="{'readonly':[('state','not in',(False,'draft'))]}" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                                        </group>
                                        <div class="oe_clear"/>
                                    </group>
                                </group>
                            </page>

                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="details_student_faculty_rate_action">
        <field name="name">Payment Rate</field>
        <field name="res_model">student.faculty.rate</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Rate" id="menu_sfc_rate"
              action="details_student_faculty_rate_action"
              parent="menu_sfc"
              sequence="2"/>

    <record id="student_faculty_rate_tree_view" model="ir.ui.view">
        <field name="name">Payment Rate</field>
        <field name="model">student.faculty.rate</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="rate" widget="monetary"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="student_faculty_search" model="ir.ui.view">
        <field name="name">student.faculty.search</field>
        <field name="model">student.faculty</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Paid" name="active" domain="[('state', '=','paid')]"/>
                <filter string="Rejected" name="active" domain="[('state', '=','reject')]"/>
                <filter string="Requested" name="active" domain="[('state', '=','payment_request')]"/>
                <filter string="Drafted" name="active" domain="[('state', '=','draft')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
</odoo>